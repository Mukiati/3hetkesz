<%- include("head") -%>
<h2>Edit book with id <%= id %></h2>
<% if (typeof msg != "undefined") { %>
<p id="msg"><%= msg %></p>
<% } %>
<form method="post">
  <label>
    Author
    <input name="author" value="<%= author %>">
  </label>
  <label>
    Title
    <input name="title" value="<%= title %>">
  </label>
  <label>
    Details
    <textarea name="details" cols="50" rows="20">
      <%= details -%>
    </textarea>
  </label>
  <a href="/book/<%= id %>"><button type="button">Cancel</button></a>
  <button>Save</button>
</form>
<%- include("foot") -%>
